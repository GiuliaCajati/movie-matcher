<h2 class="movies-index-header">All The Movies</h2>

<div id="all-movies">

<% @movies.each do |movie|%>
    <p><a href="<%= movie_path(movie)%>">
    <%= image_tag(movie.photo, :height => "300px") %></a><br>
    Title: <%= link_to movie.title, movie_path(movie) %>
    <br>
    Genre: <%= movie.genre %></p>
    
<%end%>
</div>

