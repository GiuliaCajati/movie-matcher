<% if @user.errors %>
    <ul>
        <% @user.errors.full_messages.each do |error|%>
            <li><%= error %></li>
        <% end %>
    </ul>
<% end %>


<%= form_for @user do |f| %>
<%= f.label :name, "User Name:" %>
<br>
<%= f.text_field :name %>
<br>
<br>
<br>
<%= f.label :age, "Age:" %>
<br>
<%= f.number_field :age %>
<br>
<br>
<br>
<%= f.label :phone_number, "Phone Number:" %>
<br>
<%= f.text_field :phone_number %>
<br>
<br>
<br>
<%= f.label :bio, "Bio:" %>
<br>
<%= f.text_area :bio %>
<br>
<br>
<br>
<%= f.label :photo, "Picture:" %>
<br>
<%= f.text_field :photo %>
<br>
<br>
<br>
<%= f.label :password, "Password:" %>
<br>
<%= f.password_field :password %><br>
<br>
<br>
<%= f.label :city_id, "City:" %>
<br>
<%= f.collection_select(:city_id, City.all, :id, :name)%>
<br>
<br>
<%= f.submit  %>
<% end %>

