<div id="login-box">
<div id="inner-login-box">
<h2> MOVIEMATCHER </h2>
<i class= "sub" >  Click with your favorite flick. </i><br><br>

<%= flash.now[:no_user] %>
<%= flash[:message] %>

<%= form_tag welcome_path do %>
<br>
    <%= label_tag :username, "USERNAME" %><br>
    <%= text_field_tag :name, "", class: 'textfield' %><br><br>
    <%= label_tag :password, "PASSWORD" %><br>
    <%= password_field_tag :password, "", class: 'textfield' %><br><br>
    <div><%= submit_tag "Login", class: "loginbtn" %></div>
<% end %>
<br>
<%= button_to "Sign Up", 'users/new', class: "loginbtn", method: :get %> 

</div>
</div>

